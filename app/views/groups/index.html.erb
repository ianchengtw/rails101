<div class="col-md-12">
  <%= link_to("New Group", new_group_path, class: 'btn btn-primary pull-right') %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
            <% if group.editable_by?(current_user) %>
              <%= link_to("Edit", edit_group_path(group), class: 'btn btn-default btn-xs') %>
              <%= link_to("Delete", group_path(group), class: 'btn btn-default btn-xs', method: :delete, data: { confirm: 'Are you sure?' }) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
