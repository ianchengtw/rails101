<div class="col md-12">
  <div class="group">
    <% if current_user.present? %>
      <% if current_user.is_member_of?(@group) %>
        <%= link_to("Quit Group", quit_group_path(@group), method: :post, class: 'btn btn-danger') %>
      <% else %>
        <%= link_to("Join Group", join_group_path(@group), method: :post, class: 'btn btn-info') %></%>
      <% end %>
    <% end %>

    <%= link_to("New Post", new_group_post_path(@group), class: 'btn btn-primary pull-right') %>
  </div>

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
  <%= link_to("Back", groups_path, class: 'btn btn-default') %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @group.posts.map do |post| %>
        <tr>
          <td><%= link_to(render_post_content(post), group_post_path(@group, post)) %></td>
          <td><%= post.updated_at.to_formatted_s(:short) %></td>
          <td>
            <% if post.editable_by?(current_user) %>
              <%= link_to("Edit", edit_group_post_path(@group, post), class: 'btn btn-default btn-xs') %>
              <%= link_to("Delete", group_post_path(@group, post), class: 'btn btn-default btn-xs', method: :delete, data: { confirm: 'Are you sure?' }) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
