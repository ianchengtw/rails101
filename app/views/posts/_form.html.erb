<%= simple_form_for [group, post] do |f| %>
  <div class="form-group">
    <%= f.input :content, required: true, input_html: { class: 'form-contorl' } %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
    <%= link_to("Back", group_path(@group), class: 'btn btn-default') %>
  </div>
<% end %>
