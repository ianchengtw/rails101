<div class="col-md-12">
  <h2 class="text-center">My Posts</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Group</th>
        <th>Content</th>
        <th>Last updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.map do |post| %>
        <tr>
          <td>#</td>
          <td><%= link_to(post.group.title, group_path(post.group)) %></td>
          <td><%= render_post_content(post) %></td>
          <td><%= post.updated_at.to_formatted_s(:short) %></td>
          <td>
            <%= link_to("Edit", edit_group_post_path(post.group, post), class: 'btn btn-default btn-xs') %>
            <%= link_to("Delete", group_post_path(post.group, post), class: 'btn btn-default btn-xs', method: :delete, data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
